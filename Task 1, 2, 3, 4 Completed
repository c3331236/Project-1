        else if((c == 'N')){
            c = c + 1 ;    //O
            msg[i] = c;    
        }
        else if((c == 'O')){
            c = c + 1;    //P
            msg[i] = c;    
        }
        else if((c == 'E')){
            c = c + 12;    //Q
            msg[i] = c;    
        }
        else if((c == 'M')){
            c = c + 5 ;    //R
            msg[i] = c;    
